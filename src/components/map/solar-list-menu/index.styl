@import '../../../mixin'

.solar-list-menu
  width 90%
  height 90%
  background white
  padding 52px 0 0
  position relative
  top 5%
  left 5%
  $display-flex(column)

  &__wrap
    width 100%
    height 100%
    overflow-y auto
    overflow-x hidden    
    $display-flex(column, flex-start)
  
  &__title
    width 100%
    position absolute
    top 0
    left 0

    $display-flex()
    
    h3
      padding 0 24px
      text-align center
      flex 1

  &__detail-wrap
    width 100%    
    
  &__list-item
    width 100%
    padding 16px
    border-bottom 1px solid #ddd
    cursor pointer
    opacity 0.8
    $display-flex(row, space-between)
    
    &:hover
      opacity 0.8
      background #ddd
    
    &--selected
      cursor default
      pointer-events none
      color #1b76c4
      opacity 1
      
      .solar-list-menu__list-item__status
        opacity 1
      
    &__title
      flex 1

    &__status
      opacity 0
